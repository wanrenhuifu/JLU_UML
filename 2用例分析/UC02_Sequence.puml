@startuml UC02_Sequence
actor User
boundary PersonalInfoPage
control ProfileController
entity Student
entity Teacher

User -> PersonalInfoPage : 修改信息并保存
activate PersonalInfoPage
PersonalInfoPage -> ProfileController : updateProfile(uid, data)
activate ProfileController
alt 用户是学生
    ProfileController -> Student : updateInfo(data)
    activate Student
    Student --> ProfileController : success
    deactivate Student
else 用户是教师
    ProfileController -> Teacher : updateInfo(data)
    activate Teacher
    Teacher --> ProfileController : success
    deactivate Teacher
end
ProfileController --> PersonalInfoPage : notifySuccess()
deactivate ProfileController
PersonalInfoPage --> User : 提示保存成功
deactivate PersonalInfoPage
@enduml
