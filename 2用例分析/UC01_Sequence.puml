@startuml UC01_Sequence
actor User
boundary LoginForm
control LoginController
entity Account
boundary MainDashboard

User -> LoginForm : 输入账号密码
LoginForm -> LoginController : login(uid, pwd)
activate LoginController
LoginController -> Account : findByUid(uid)
activate Account
Account --> LoginController : accountData
deactivate Account
LoginController -> LoginController : verifyPassword(pwd)
alt 验证成功
    LoginController -> MainDashboard : navigateTo()
    activate MainDashboard
    MainDashboard --> User : 显示主界面
    deactivate MainDashboard
else 验证失败
    LoginController --> LoginForm : showErrorMessage()
    LoginForm --> User : 提示错误
end
deactivate LoginController
@enduml
