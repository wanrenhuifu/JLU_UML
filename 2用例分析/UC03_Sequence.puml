@startuml UC03_Sequence
actor StudentActor as Student
boundary CourseQueryUI
control CourseSearchController
boundary ExternalDBInterface
entity Course

Student -> CourseQueryUI : 输入查询条件
activate CourseQueryUI
CourseQueryUI -> CourseSearchController : search(criteria)
activate CourseSearchController
CourseSearchController -> ExternalDBInterface : pullCourseInfo()
activate ExternalDBInterface
ExternalDBInterface --> CourseSearchController : dataList
deactivate ExternalDBInterface
loop for each entry
    CourseSearchController -> Course : createFromData(entry)
end
CourseSearchController --> CourseQueryUI : display(courses)
deactivate CourseSearchController
CourseQueryUI --> Student : 展示课程列表
deactivate CourseQueryUI
@enduml
