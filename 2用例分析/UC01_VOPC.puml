@startuml UC01_VOPC
class LoginForm <<Boundary>> {
    +submit()
    +showError()
}
class LoginController <<Control>> {
    +login(uid, pwd)
    +verifyPassword()
}
class Account <<Entity>> {
    -uid: String
    -passwordHash: String
    -role: String
    +findByUid()
}
class MainDashboard <<Boundary>> {
    +display()
}

LoginForm ..> LoginController
LoginController ..> Account
LoginController ..> MainDashboard
@enduml
